{
  "manifest_version": 2,
  "name": "Solarized (Dark) Theme for Facebook",
  "version": "1.6",
  "description": "Solarized (Dark) color scheme for Facebook & Messenger.",
  "homepage_url": "https://github.com/RHJihan/Solarized-Facebook",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.messenger.com/*", "https://*.facebook.com/*"],
      "css": ["assets/style.css"]
    }
  ],
  "background": {
    "scripts": ["assets/background.js"],
    "persistent": false
}
}
